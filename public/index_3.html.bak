			}
		}

		// Build a proper YouTube embed URL from any normal YouTube link
		function extractYouTubeEmbedUrl(rawUrl) {
			try {
				const u = new URL(rawUrl);

				const host = u.hostname;
				const params = u.searchParams;

				// Playlist (Title Music)
				const listId = params.get('list');
				if (listId) {
					return `https://www.youtube.com/embed/videoseries?list=${listId}&enablejsapi=1`;
				}

				let videoId = null;

				// Short youtu.be link
				if (host.includes('youtu.be')) {
					videoId = u.pathname.replace('/', '');
				}
				// Standard watch?v=ID link
				else if (params.get('v')) {
					videoId = params.get('v');
				}
				// Already an /embed/ link
				else if (u.pathname.startsWith('/embed/')) {
					videoId = u.pathname.split('/').pop();
				}

				if (videoId) {
					return `https://www.youtube.com/embed/${videoId}?enablejsapi=1`;
				}

				// Fallback ‚Äì return raw URL if we can't parse
				return rawUrl;
			} catch (e) {
				console.warn('Could not parse YouTube URL:', rawUrl, e);
				return rawUrl;
			}
		}

// Open a video inside the "My Favourite Boss's Compositions" player
	function openBossVideo(e, rawUrl, niceTitle) {
		if (e) e.preventDefault();

		const container = document.getElementById('bossFavPlayer');
		const iframe     = document.getElementById('bossFavIframe');
		const titleEl    = document.getElementById('bossFavNowPlaying');

		if (!container || !iframe || !titleEl) return false;

		const embedUrl = extractYouTubeEmbedUrl(rawUrl);

		// Pause background theme when a Boss-fav video plays
		pauseBackgroundTheme();

		// Update player
		iframe.src = embedUrl;
		container.style.display = 'block';
		titleEl.textContent = `üéµ Now Playing: ${niceTitle}`;

		// Let YouTube API attach single-playback behaviour to this iframe
		attachYouTubePlayers();

		return false;
	}



