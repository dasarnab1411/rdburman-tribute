			// New tab / new window / reopen closed tab
			if (
			  (ctrlOrCmd && (key === 't' || key === 'n')) ||           // Ctrl/Cmd + T or N
			  (ctrlOrCmd && e.shiftKey && key === 't')                 // Ctrl/Cmd + Shift + T
			) {
			  e.preventDefault();
			  e.stopPropagation();
			  return false;
			}

			// View source: Ctrl+U / Cmd+U (best-effort)
			if (ctrlOrCmd && key === 'u') {
