{
  "cleanUrls": true,
  "rewrites": [
    { 
      "source": "/api/(.*)", 
      "destination": "https://rdburman-tribute-production.up.railway.app/api/$1" 
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://rdburman-tribute-production.up.railway.app/api/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
